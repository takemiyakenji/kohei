<h1>INTERIORDESGIN</h1>
<h3>post詳細</h3>
<div class="post">
<%= image_tag @post.user.image_url, size: "250x200" if @post.user.image? %><br>
<%= image_tag @post.image_url, size: "250x200" if @post.image? %><br>
  <p><%= @post.genre %></p><br>
  <p><%= @post.created_at %></p><br>
  <p><%= @post.price %></p><br>
  <p><%= @post.user.email %></p><br>
    <% if user_signed_in? %>
      <% if current_user.already_liked?(@post) %>
        <%= link_to post_like_path(@post), method: :delete do %>
            <i class="fas fa-heart"></i><%= @post.likes.count %>
        <% end %>
      <% else %>
        <%= link_to post_likes_path(@post), method: :post do %>
            <i class="far fa-heart"></i><%= @post.likes.count %>
        <% end %>
       <% end %>
    <% else %>
    <i class="far fa-heart"></i><%= @post.likes.count %>
    <% end %>
  <%= link_to "編集する", edit_post_path(@post.id) %>
</div>

<% @post.tags.each do |tag| %>
  <span><%= tag.name %></span>
<% end %>

<h2>いいねしたユーザー</h2>
<% @post.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "post一覧に戻る", posts_path %>